            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>TCMB Döviz Kurları </h2>
                    <ul class="nav navbar-right panel_toolbox">
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        <ul class="dropdown-menu" role="menu">
                          <li><a href="#">Settings 1</a>
                          </li>
                          <li><a href="#">Settings 2</a>
                          </li>
                        </ul>
                      </li>
                      <li><a class="close-link"><i class="fa fa-close"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    
                    <table id="datatable-buttons" class="table table-striped table-bordered">
                      <thead>
                        <tr>
                            <th>CurrencyCode</th>
                            <th>CurrencyName</th>
                            <th>ForexBuying</th>
                            <th>ForexSelling</th>
                            <th>BanknoteBuying</th>
                            <th>BanknoteSelling</th>
                        </tr>
                      </thead>


                       <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.CurrencyCode</th>
                                    <td>@item.CurrencyName</td>
                                    <td>@item.ForexBuying</td>
                                    <td>@item.ForexSelling</td>
                                    <td>@item.BanknoteBuying</td>
                                    <td>@item.BanknoteSelling</td>
                                </tr>
                            }
                       </tbody>
                    </table>
                    <a href="/TCMBExchangeCurrency/Update" class="btn btn-success">Güncelle</a>
                  </div>
                </div>
              </div>
